<table width="100%" cellpadding="0" cellspacing="0" border="0">
  <tr>
    <td>
      <table
        width="600"
        cellpadding="0"
        cellspacing="0"
        border="0"
        align="center"
        style="background-color: #ffffff"
      >
        <tr>
          <td>
            <table width="100%" cellpadding="0" cellspacing="0" border="0">
              <tr>
                <td colspan="2" style="padding-top: 40px"></td>
              </tr>
              <tr>
                <td style="width: 140px; text-align: left" valign="top">
                  <img
                    src="https://{{mediaBucket}}.s3.ap-southeast-2.amazonaws.com/email-templates/logo-with-name.png"
                    alt="Labeled Logo"
                    style="width: 140px"
                  />
                </td>
                <td style="text-align: right">
                  <div style="text-align: right">
                    <p style="font-size: 30px; margin: 0">REMITTANCE ADVICE</p>
                    <p style="font-size: 14px; margin: 0"><b>Invoice # </b>{{receiptNumber}}</p>
                    <p style="font-size: 16px; margin: 0">
                      <b>From: Lingua Franca Hub PTY LTD</b>
                    </p>
                    <p style="font-size: 16px; margin: 0">ABN 42 661 208 635</p>
                    <p style="font-size: 16px; margin: 0">
                      36/1 Thread Lane, Waterloo, NSW, 2017, Australia
                    </p>
                    <p style="font-size: 16px; margin: 0">
                      <b>To: {{recipientData.recipientName}}</b>
                    </p>
                    {{#if recipientData.recipientAbnNumber}}
                    <p style="font-size: 16px; margin: 0">ABN {{recipientData.recipientAbnNumber}}</p>
                    {{/if}}
                    <p style="font-size: 16px; margin: 0">(Company ID {{recipientData.recipientId}})</p>
                  </div>
                </td>
              </tr>
            </table>
          </td>
        </tr>
        <tr>
          <td
            style="
              font-family: Arial, sans-serif;
              color: #333;
              line-height: 1;
              padding-top: 30px;
              font-size: 14px;
            "
          >
            <p style="margin-bottom: 10px"><br />Hi, {{adminFirstName}},</p>
            <p style="margin-bottom: 10px">
              I am attaching your remittance advice for payment.<br />
              If you have any questions or need further assistance, feel free to reach out to us
              at<br />
              interpreters@linguafrancahub.com<br />
            </p>
            <p style="margin-bottom: 10px">
              Best regards, <br />
              LFH Customer Support Team<br /><br /><br />
            </p>
          </td>
        </tr>
        <tr>
          <td>
            {{#each paymentsData}}
            <table
              width="100%"
              cellpadding="0"
              cellspacing="0"
              border="1"
              style="border-collapse: collapse; margin: 20px 0"
            >
              <thead>
                <tr>
                  <th
                    style="
                      padding-top: 8px;
                      padding-bottom: 8px;
                      padding-left: 2px;
                      padding-right: 2px;
                      text-align: center;
                      font-size: 14px;
                    "
                  >
                    Payment Date
                  </th>
                  <th
                    style="
                      padding-top: 8px;
                      padding-bottom: 8px;
                      padding-left: 2px;
                      padding-right: 2px;
                      text-align: center;
                      font-size: 14px;
                    "
                  >
                    Booking ID
                  </th>
                  <th
                    style="
                      padding-top: 8px;
                      padding-bottom: 8px;
                      padding-left: 2px;
                      padding-right: 2px;
                      text-align: center;
                      font-size: 14px;
                    "
                  >
                    Interpreter ID
                  </th>
                  <th
                    style="
                      padding-top: 8px;
                      padding-bottom: 8px;
                      padding-left: 2px;
                      padding-right: 2px;
                      text-align: center;
                      font-size: 14px;
                    "
                  >
                    Booking Type
                  </th>
                  <th
                    style="
                      padding-top: 8px;
                      padding-bottom: 8px;
                      padding-left: 2px;
                      padding-right: 2px;
                      text-align: center;
                      font-size: 14px;
                    "
                  >
                    Chargeable mins
                  </th>
                  <th
                    style="
                      padding-top: 8px;
                      padding-bottom: 8px;
                      padding-left: 2px;
                      padding-right: 2px;
                      text-align: center;
                      font-size: 14px;
                    "
                  >
                    Total Amount Paid
                  </th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td
                    style="
                      padding-top: 8px;
                      padding-bottom: 8px;
                      padding-left: 2px;
                      padding-right: 2px;
                      text-align: center;
                      font-size: 14px;
                    "
                  >
                    {{issueDate}}
                  </td>
                  <td
                    style="
                      padding-top: 8px;
                      padding-bottom: 8px;
                      padding-left: 2px;
                      padding-right: 2px;
                      text-align: center;
                      font-size: 14px;
                    "
                  >
                    #{{payment.appointment.platformId}}
                  </td>
                  <td
                    style="
                      padding-top: 8px;
                      padding-bottom: 8px;
                      padding-left: 2px;
                      padding-right: 2px;
                      text-align: center;
                      font-size: 14px;
                    "
                  >
                    {{payment.appointment.interpreter.user.platformId}}
                  </td>
                  <td
                    style="
                      padding-top: 8px;
                      padding-bottom: 8px;
                      padding-left: 2px;
                      padding-right: 2px;
                      text-align: center;
                      font-size: 14px;
                    "
                  >
                    {{appointmentServiceType}}
                  </td>
                  <td
                    style="
                      padding-top: 8px;
                      padding-bottom: 8px;
                      padding-left: 2px;
                      padding-right: 2px;
                      text-align: center;
                      font-size: 14px;
                    "
                  >
                    {{totalDuration}}
                  </td>
                  <td
                    style="
                      padding-top: 8px;
                      padding-bottom: 8px;
                      padding-left: 2px;
                      padding-right: 2px;
                      text-align: center;
                      font-size: 14px;
                    "
                  >
                    {{payment.currency}} {{payment.totalFullAmount}}
                  </td>
                </tr>
              </tbody>
            </table>

            <table
              width="100%"
              cellpadding="0"
              cellspacing="0"
              border="1"
              style="border-collapse: collapse; margin: 20px 0"
            >
              <thead>
                <tr>
                  <th
                    style="
                      padding-top: 8px;
                      padding-bottom: 8px;
                      padding-left: 2px;
                      padding-right: 2px;
                      text-align: center;
                      font-size: 14px;
                    "
                  >
                    Invoice Date
                  </th>
                  <th
                    style="
                      padding-top: 8px;
                      padding-bottom: 8px;
                      padding-left: 2px;
                      padding-right: 2px;
                      text-align: center;
                      font-size: 14px;
                    "
                  >
                    Booking Date & Time
                  </th>
                  <th
                    style="
                      padding-top: 8px;
                      padding-bottom: 8px;
                      padding-left: 2px;
                      padding-right: 2px;
                      text-align: center;
                      font-size: 14px;
                    "
                  >
                    Booking Topic
                  </th>
                  <th
                    style="
                      padding-top: 8px;
                      padding-bottom: 8px;
                      padding-left: 2px;
                      padding-right: 2px;
                      text-align: center;
                      font-size: 14px;
                    "
                  >
                    Invoice Total Excl GST
                  </th>
                  <th
                    style="
                      padding-top: 8px;
                      padding-bottom: 8px;
                      padding-left: 2px;
                      padding-right: 2px;
                      text-align: center;
                      font-size: 14px;
                    "
                  >
                    GST Charged
                  </th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td
                    style="
                      padding-top: 8px;
                      padding-bottom: 8px;
                      padding-left: 2px;
                      padding-right: 2px;
                      text-align: center;
                      font-size: 14px;
                    "
                  >
                    {{issueDate}}
                  </td>
                  <td
                    style="
                      padding-top: 8px;
                      padding-bottom: 8px;
                      padding-left: 2px;
                      padding-right: 2px;
                      text-align: center;
                      font-size: 14px;
                    "
                  >
                    {{appointmentDate}}
                  </td>
                  <td
                    style="
                      padding-top: 8px;
                      padding-bottom: 8px;
                      padding-left: 2px;
                      padding-right: 2px;
                      text-align: center;
                      font-size: 14px;
                    "
                  >
                    {{payment.appointment.topic}}
                  </td>
                  <td
                    style="
                      padding-top: 8px;
                      padding-bottom: 8px;
                      padding-left: 2px;
                      padding-right: 2px;
                      text-align: center;
                      font-size: 14px;
                    "
                  >
                    {{payment.currency}} {{payment.totalAmount}}
                  </td>
                  <td
                    style="
                      padding-top: 8px;
                      padding-bottom: 8px;
                      padding-left: 2px;
                      padding-right: 2px;
                      text-align: center;
                      font-size: 14px;
                    "
                  >
                    {{payment.currency}} {{payment.totalGstAmount}}
                  </td>
                </tr>
              </tbody>
            </table>
            <p><br /></p>
            {{/each}}
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>
