<table width="100%" cellpadding="0" cellspacing="0" border="0">
  <tr>
    <td>
      <table
        width="600"
        cellpadding="0"
        cellspacing="0"
        border="0"
        align="center"
        style="background-color: #ffffff"
      >
        <tr>
          <td>
            <table width="100%" cellpadding="0" cellspacing="0" border="0">
              <tr>
                <td colspan="2" style="padding-top: 40px"></td>
              </tr>
              <tr>
                <td style="text-align: left" valign="top">
                  <img
                    src="https://{{mediaBucket}}.s3.ap-southeast-2.amazonaws.com/email-templates/logo-with-name.png"
                    alt="Labeled Logo"
                    style="width: 140px"
                  />
                </td>
                <td style="text-align: right">
                  <div style="text-align: right">
                    <p style="font-size: 35px">TAX INVOICE</p>
                    <br />
                    <b>From: {{lfhCompanyData.companyName}}</b><br />
                    <p>ABN {{lfhCompanyData.abnNumber}}</p>
                    <p>{{lfhCompanyData.companyAddress}}</p>
                    <b>To: {{recipientData.recipientName}}</b><br />
										{{#if recipientData.recipientAbnNumber}}<p>ABN {{recipientData.recipientAbnNumber}}</p>{{/if}}
                    <b>(Company ID {{recipientData.recipientId}})</b><br />
                    <p>{{recipientData.recipientAddress}}</p>
                    <br />
                  </div>
                </td>
              </tr>
            </table>
          </td>
        </tr>
        <tr>
          <td>
            <h3 style="font-family: Arial, sans-serif; color: #333; line-height: 1.4">
              Invoice Number {{payment.platformId}} - PAID
            </h3>
            <table
              width="100%"
              cellpadding="0"
              cellspacing="0"
              border="1"
              style="border-collapse: collapse; margin: 20px 0"
            >
              <thead>
                <tr>
                  <th
                    style="
                      padding-top: 8px;
                      padding-bottom: 8px;
                      padding-left: 2px;
                      padding-right: 2px;
                      text-align: center;
                      font-size: 14px;
                    "
                  >
                    Currency
                  </th>
                  <th
                    style="
                      padding-top: 8px;
                      padding-bottom: 8px;
                      padding-left: 2px;
                      padding-right: 2px;
                      text-align: center;
                      font-size: 14px;
                    "
                  >
                    Date of Issue
                  </th>
                  <th
                    style="
                      padding-top: 8px;
                      padding-bottom: 8px;
                      padding-left: 2px;
                      padding-right: 2px;
                      text-align: center;
                      font-size: 14px;
                    "
                  >
                    Total
                  </th>
                  <th
                    style="
                      padding-top: 8px;
                      padding-bottom: 8px;
                      padding-left: 2px;
                      padding-right: 2px;
                      text-align: center;
                      font-size: 14px;
                    "
                  >
                    GST Amount
                  </th>
                  <th
                    style="
                      padding-top: 8px;
                      padding-bottom: 8px;
                      padding-left: 2px;
                      padding-right: 2px;
                      text-align: center;
                      font-size: 14px;
                    "
                  >
                    Invoice Total
                  </th>
                  <th
                    style="
                      padding-top: 8px;
                      padding-bottom: 8px;
                      padding-left: 2px;
                      padding-right: 2px;
                      text-align: center;
                      font-size: 14px;
                    "
                  >
                    Amount Paid
                  </th>
                  <th
                    style="
                      padding-top: 8px;
                      padding-bottom: 8px;
                      padding-left: 2px;
                      padding-right: 2px;
                      text-align: center;
                      font-size: 14px;
                    "
                  >
                    Amount Due
                  </th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td
                    style="
                      padding-top: 8px;
                      padding-bottom: 8px;
                      padding-left: 2px;
                      padding-right: 2px;
                      text-align: center;
                      font-size: 14px;
                    "
                  >
                    {{payment.currency}}
                  </td>
                  <td
                    style="
                      padding-top: 8px;
                      padding-bottom: 8px;
                      padding-left: 2px;
                      padding-right: 2px;
                      text-align: center;
                      font-size: 14px;
                    "
                  >
                    {{issueDate}}
                  </td>
                  <td
                    style="
                      padding-top: 8px;
                      padding-bottom: 8px;
                      padding-left: 2px;
                      padding-right: 2px;
                      text-align: center;
                      font-size: 14px;
                    "
                  >
                    {{payment.currency}} {{payment.totalAmount}}
                  </td>
                  <td
                    style="
                      padding-top: 8px;
                      padding-bottom: 8px;
                      padding-left: 2px;
                      padding-right: 2px;
                      text-align: center;
                      font-size: 14px;
                    "
                  >
                    {{payment.currency}} {{payment.totalGstAmount}}
                  </td>
                  <td
                    style="
                      padding-top: 8px;
                      padding-bottom: 8px;
                      padding-left: 2px;
                      padding-right: 2px;
                      text-align: center;
                      font-size: 14px;
                    "
                  >
                    {{payment.currency}} {{payment.totalFullAmount}}
                  </td>
                  <td
                    style="
                      padding-top: 8px;
                      padding-bottom: 8px;
                      padding-left: 2px;
                      padding-right: 2px;
                      text-align: center;
                      font-size: 14px;
                    "
                  >
                    {{payment.currency}} {{#if payment.totalFullAmount}}-{{payment.totalFullAmount}}{{else}}0{{/if}}
                  </td>
                  <td
                    style="
                      padding-top: 8px;
                      padding-bottom: 8px;
                      padding-left: 2px;
                      padding-right: 2px;
                      text-align: center;
                      font-size: 14px;
                    "
                  >
                    {{payment.currency}} "0.00"
                  </td>
                </tr>
              </tbody>
            </table>
          </td>
        </tr>
        <tr>
          <td>
            <h3 style="font-family: Arial, sans-serif; color: #333; line-height: 1.4">Payment</h3>
            <table
              width="100%"
              cellpadding="0"
              cellspacing="0"
              border="1"
              style="border-collapse: collapse; margin: 20px 0"
            >
              <thead>
                <tr>
                  <th
                    style="
                      padding-top: 8px;
                      padding-bottom: 8px;
                      padding-left: 2px;
                      padding-right: 2px;
                      text-align: center;
                      font-size: 14px;
                    "
